{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2015"],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "target": "es2015"
  },
  "include": ["**/*.js", "**/*.ts", "**/*.vue"],
  "exclude": [".nuxt", "build", "dist", "node_modules"]
}
